<UserControl x:Class="WallpaperDownloader.Views.AuthStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:localization="clr-namespace:WallpaperDownloader.Localization"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="350">

    <Grid Margin="0,15,30,15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Text="{x:Static localization:strings.AuthStatus}"
                   Foreground="{StaticResource MainBlackColor}"
                   FontSize="14"
                   Margin="16,1,0,0"
                   FontWeight="Medium"/>

        <Control Grid.Column="1"     
                 Margin="0,0,0,0"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Right"
                 Style="{StaticResource AuthStatusStyle}"/>
    </Grid>

</UserControl>
